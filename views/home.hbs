<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>
    <style>
        body{
            background-color:white;
            left:160px;
            margin: 0;
        }

        html, body {
            /*width: 91%;*/
            max-width:100%;
            overflow-x: hidden;
            height: 100%
        }

        .header{
            /*padding: 0px 16px;*/
            background-color: white;
            color: grey;
            display: flex;
            flex-direction: row;
            height: 10%;

            box-shadow: 0 3px 6px rgba(197, 197, 197, 0.25);
        }

        .content {
            z-index:0;

            position: relative;
            top: 60px;
            left: 200px;

            height: 84%;
            width: 78%;
            
            /*border:tomato solid;*/
            padding: 16px;
            overflow: hidden;

            font-family: Roboto;
        }

        .sticky {
            position: fixed;
            top: 0;
            left: 0;
            
            width: 100%;
        }

        .sticky + .content {
            /*padding-top: 102px;*/
        }

        .searchForm{
            position: relative;
            top:10%;
            left: 10%;

            height: 75%;
            width: 50%;
        }

        .searchBar{
            padding-left: 20px;
            top:0;

            height: 100%;
            /*width: 100%*/
            width:90%;   
            
            border: 0px;
            border-radius: 10px;

            background-color: rgb(233, 233, 233);
        }

        .name{
            position: relative;
            top:-10%;
            left: 5%;
            font-family: Roboto;
        }

        .logoutIcon{
            position: relative;
            float: right;
        }

        .logoutLink{
            position: relative;
            top: 30%;
            left:90%;
            
        }

        .sidenav{
            height: 100%;
            width: 200px;
            position: fixed;
            -webkit-position: sticky;

            z-index: 0;
            top: 55px;
            left: 0;

            background-color: white;
            overflow-x: hidden;
            padding-top: 20px;
        }

        .selection  {
            padding: 8px 8px 8px 30px;

            text-decoration: none;
            font-size: 12pt;
            font-family: Roboto;
            color: #818181;
            display: block;
        }

        .selection:hover {
            background-color: #ffd0004d;
            border: 0px;
            border-radius: 0 25px 25px 0;
        }

        .labels{
            padding: 20px 8px 8px 15px;

            text-decoration: none;
            font-size: 10pt;
            font-family: Roboto;
            color: #818181;
            display: block;

            border-top: .75px solid #818181;
        }

        .createpostForm{
            position: relative;
            top: 2%;
            left: 28%;

            height: 9%;
            width: 50%;

            display: flex;
            flex-direction: row;
        }

        .createpostTitle{
            position: relative;
            left: 0px;

            height: 100%;
            width: 100%;

            padding-left: 20px;

            border: 0px;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(32, 32, 32, 0.25);
        }

        .createpostButton{
            position: relative;
            left: -10%;
        }

        #overlay {
            position: fixed;
            display: none;
            width: 100%;
            height: 100%;
            top: 0; 
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.5);
            z-index: 2;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <!--Side Navigation-->
    <div class="sidenav">
        <div class="selection">Notes</div>
        <div class="selection">Checklists</div> <br>
        <div class="labels">LABELS</div>
    </div>

    <!--Header-->
    <div class="header sticky" id="HeaderDiv">
        <a class="logoutLink" href="login.html"> Logout</a>
        <h2 class="name">CheckNotes</h2>
        
        <form class="searchForm">
            <input class="searchBar" type="text" placeholder="Search">
        </form>
        
        <!--<img class="logoutIcon" src="Checkbox Icon.svg">-->
    </div>

    <!--Page Content-->
    <div class="content">
        <!--Welcome {{username}}!
        <br>
        <br>

        <div>
            <p>Preferences </p>

            <form action="preferences" method="POST">
                font size: <input type="number" name="fontsize">
                <input type="submit" value="Submit Query">
            </form>
        </div>-->

        <form class="createpostForm">
            <input class="createpostTitle" type="text" placeholder="Create a note or checklist...">
            <input class="createpostButton" type="button" value="Create">
        </form>

    </div>

    <!--Overlay-->
    <div id="overlay">
        Poo
    </div>

    <script>
        window.onscroll = function() {stickyFunction()};

        let header = document.getElementById("HeaderDiv");
        let sticky = header.offsetTop;

        function stickyFunction() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }

        

        function on() {
            document.getElementById("overlay").style.display = "block";
        }

        function off() {
            document.getElementById("overlay").style.display = "none";
        }
    </script>
</body>

</html>